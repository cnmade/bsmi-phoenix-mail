<Window x:Class="bsmi_phoenix_mail.area.setting.view.AllSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bsmi_phoenix_mail.area.setting.view"
        mc:Ignorable="d"
        Title="所有设置" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <TreeView>
            <TreeViewItem Header="全部" IsExpanded="True">
                <TreeViewItem Header="基本">
                    <TreeViewItem Header="字体"></TreeViewItem>
                </TreeViewItem>
            </TreeViewItem>
        </TreeView>
        
    </Grid>
</Window>
